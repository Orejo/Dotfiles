[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
black1 = ${xrdb:color0}
black2 = ${xrdb:color8}
red1 = ${xrdb:color1}
red2 =  ${xrdb:color9}
green1 = ${xrdb:color2}
green2 = ${xrdb:color10}
yellow1 = ${xrdb:color3}
yellow2 = ${xrdb:color11}
blue1 = ${xrdb:color4}
blue2 = ${xrdb:color12}
magenta1 = ${xrdb:color5}
magenta2 = ${xrdb:color13}
cyan1 = ${xrdb:color6}
cyan2 = ${xrdb:color14}
white1 = ${xrdb:color7}
white2 = ${xrdb:color15}


[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 50
;offset-y = 15
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.red1}

;border-size = 4

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 2

;font-0 = fixed:pixelsize=10;1
;font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
;font-2 = siji:pixelsize=10;1

font-0 = Iosevka Medium:antialias=true:pixelsize=10;1
font-1 = FontAwesome:pixelsize=9;1
font-2 = Wuncon Siji:pixelsize:9;2

modules-left = bspwm spotify mpd
modules-center = 
modules-right = xkeyboard wlan eth  memory cpu battery temperature date powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
;format-prefix-background = ${colors.blue1}
;format-prefix-foreground = ${colors.black1}
;format-prefix-padding = 1

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
;label-indicator-background = ${colors.yellow1}
;label-indicator-underline = ${colors.yellow1}

[module/bspwm]
type = internal/bspwm

